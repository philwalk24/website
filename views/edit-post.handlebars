<div class="post card">
  <!-- Card Header -->
  <div class="card-header">
    <h2>Edit Post</h2>
  </div>

  <!-- Edit Post Form -->
  <form id="edit-post-form" class="card-body">
    <!-- Hidden Input for Post ID -->
    <input type="hidden" name="post-id" value="{{post.id}}" />

    <!-- Title Input -->
    <label class="form-label" for="post-title">Title</label>
    <input type="text" name="post-title" value="{{post.title}}" class="form-input" />

    <!-- Content Textarea -->
    <label class="form-label" for="post-body">Content</label>
    <textarea name="post-body" class="form-input">{{post.body}}</textarea>

    <!-- Update Button -->
    <button type="submit" class="btn">Update</button>

    <!-- Delete Button -->
    <button type="button" id="delete-btn" class="btn">Delete</button>
  </form>
</div>

<!-- JavaScript for Edit Post functionality -->
<script src="/js/edit.js"></script>