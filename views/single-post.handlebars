<div class="post">
  <!-- Display Post Information -->
  <article class="card">
    <div class="card-header flex-row justify-space-between">
      <!-- Post Title -->
      <h2>{{post.title}}</h2>
      <!-- Author and Creation Date -->
      <div>
        Posted by {{post.User.username}} on {{format_date post.createdAt}}
      </div>
    </div>
    <!-- Post Body -->
    <div class="card-body">
      {{post.body}}
    </div>
  </article>

  <!-- Display Comments if Available -->
  {{#if post.Comments}}
    <section class="card">
      <div class="card-header">
        <h3>Comments</h3>
      </div>

      <div class="card-body">
        {{#each post.Comments}}
          <div>
            <p>
              {{body}}
            </p>
            <!-- Comment Author and Creation Date -->
            <p>
              &mdash; {{User.username}}, {{format_date createdAt}}
            </p>
          </div>
        {{/each}}
      </div>
    </section>
  {{/if}}

  <!-- New Comment Form -->
  <form id="new-comment-form" class="card">
    <div class="card-header">
      <h3>Add New Comment</h3>
    </div>

    <div class="card-body">
      <!-- Hidden Input for Post ID -->
      <input type="hidden" name="post-id" value="{{post.id}}" />

      <!-- Comment Textarea -->
      <label class="form-label" for="comment-body">Comment</label>
      <textarea name="comment-body" class="form-input"></textarea>

      <!-- Submit Button -->
      <button type="submit" class="btn">Submit</button>
    </div>
  </form>
</div>

<!-- JavaScript for Comment functionality -->
<script src="/js/comment.js"></script>
